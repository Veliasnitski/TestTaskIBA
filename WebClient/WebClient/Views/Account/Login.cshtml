
@model WebClient.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Authorization</h2> <br>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Enter your nickname</label> <br>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" /><br>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter your password</label><br>
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br>
        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-secondary" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="Account">Register</a>
