@model WebClient.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <h2>
        Registration
    </h2><br>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Enter your nickname</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" /><br />
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input asp-for="ConfirmPassword" /><br />
            <span asp-validation-for="ConfirmPassword" /><br>
        </div>
        <div class="form-group">
            <input type="submit" value="Check in" class="btn btn-secondary" />
        </div>
    </div>
</form>
